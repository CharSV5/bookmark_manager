<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <ul>
    <% @links.each do |link| %>
    <li id="link-<%= link.id %>">
         <a href="<%= link.url %>">
        <%= link.title %></a>
        <form action="/delete" method="post">
          <input type="hidden" name="id" value="<%= link.id %>">
        <input type="submit" value="Delete" />
      </form>
      <form action="/edit" method="get">
        <input type="hidden" name="id" value="<%= link.id %>">
      <input type="submit" value="Edit" />
    </form>
      </li>
      <% end %>
    </ul>
    <a href="/new-link">Add New Link</a>


  </body>
</html>
