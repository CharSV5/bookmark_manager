<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <ul>
    <% @links.each do |link| %>
    <li id="link-<%= link.id %>">
         <a href="<%= link.url %>">
        <%= link.title %></a>
        <form action="/links/<%= link.id %>/delete" method="post">
        <input type="submit" value="Delete" />
      </form>
      <form action="/links/<%= link.id %>/update" method="get">
      <input type="submit" value="Edit" />
    </form>
      <form action="/links/<%= link.id %>/comments" method="post">
      <input type="submit" value="Comment" />
    </form>
    <%= link.comments %>
      </li>
      <% end %>
    </ul>
    <a href="/links/new">Add New Link</a>


  </body>
</html>
