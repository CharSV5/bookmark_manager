<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <a href="/links/new">Add New Link</a>
    <ul>
    <% @links.each do |link| %>
    <li id="link-<%= link.id %>">
         <a href="<%= link.url %>">
        <%= link.title %></a>
        <form action="/links/<%= link.id %>/delete" method="post">
        <input type="submit" value="Delete" />
      </form>
      <form action="/links/<%= link.id %>/update" method="get">
      <input type="submit" value="Edit" />
    </form>
    <a href="/links/<%= link.id %>/comments/new">Comment</a>
        <ul>
          <% link.comments.each do |comment| %>
          <li><%= comment.text  %></li>
          <% end %>
        </ul>
      </li>
      <% end %>
    </ul>


  </body>
</html>
